<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="/styles/custom.css" type="text/css">
  <link rel="stylesheet" href="/styles/theme.css" type="text/css"> </head>

<body class="bg-dark">
  
  <hr style="border: 1px solid white;" class="m-0 p-0 border border-info">
  <div class="text-center text-white bg-dark py-1" style="background-image: url(&quot;/image/background.jpg&quot;);">
    <div class="container w-50">
      <div class="row my-3">
        <div class="col-md-8 mx-auto">
          <div class="card text-white bg-dark p-4">
            <img class="img-fluid mx-auto" src="/image/login.png" alt="Card image" height="16" width="150">
            <div class="card-body">
              <% if(flash && flash.err) { %>
                <div class="alert alert-warning alert-dismissible">
                  <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
                  <% Object.keys(flash.err).forEach(function(error) { %>
                  <h6 class="text-dark"><%- JSON.stringify(flash.err[error]) %></h6>
                  <% }) %>
                </div>
              <% } %>
              <h2 class="mb-4 m-0 text-center">Register</h2>
              <form method="post" action="user/create">
                <div class="form-group">
                  <input type="text" class="form-control" name="email" placeholder="Email"> </div>
                <div class="form-group">
                  <input type="password" class="form-control" name="password" placeholder="Password"> </div>
                  <input type="hidden" name="wallet" value="0">
                  <div class="row my-1">
                    <div class="col-md-4">
                      <h6 class="text-left">Processor</h6>
                    </div>
                    <div class="col-md-8">
                      <select class="form-control" id="sel1" name="processor_id">
                        <%  _.each(processor,function(processor){ %>
                          <option value="<%= processor.id %>"><%= processor.processor_name %></option>
                          <%})%>
                      </select>
                    </div>
                  </div>
                  <div class="row my-2">
                    <div class="col-md-4">
                      <h6 class="text-left">VGA</h6>
                    </div>
                    <div class="col-md-8">
                      <select class="form-control" id="sel1" name="vga_id">
                        <%  _.each(vga,function(vga){ %>
                          <option value="<%= vga.id %>"><%= vga.vga_name %></option>
                          <%})%>
                      </select>
                    </div>
                  </div>
                  <div class="row my-1">
                    <div class="col-md-4">
                      <h6 class="text-left">RAM</h6>
                    </div>
                    <div class="col-md-8">
                      <select class="form-control" id="sel1" name="ram_id">
                        <%  _.each(ram,function(ram){ %>
                          <option value="<%= ram.id %>"><%= ram.ram_size %></option>
                          <%})%>
                      </select>
                      <input type="hidden" name="genre[]" value="5b34f1d3f7460b278469cc34">
                    </div>
                  </div>
                <button type="submit" class="btn btn-secondary btn-block">Register</button>
              </form>
              <p class="text-light my-2">Already has an account? <a href="http://localhost:1337/login" class="text-white">Login</a></p>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="py-5 text-white bg-dark">
    <div class="container">
      <div class="row">
        <div class="col-md-12 mt-3 text-center">
          <p>Â© Copyright 2018 Gamestudio - All rights reserved.</p>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" crossorigin="anonymous" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="/js/dependencies/sails.io.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/jquery-3.2.1.slim.min.js"></script>
  <script src="/js/jquery-3.3.1.min.js"></script>
  <script src="/js/popper.min.js"></script>

</body>

</html>