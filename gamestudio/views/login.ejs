<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="styles/custom.css" type="text/css">
  <link rel="stylesheet" href="/styles/theme.css" type="text/css"> 

</head>

<body class="bg-dark">
  
  <hr style="border: 1px solid white;" class="m-0 p-0 border border-info">
  <div class="text-center text-white bg-dark py-1" style="background-image: url(&quot;/image/background.jpg&quot;);">
    <div class="container w-50">
      <div class="row my-3">
        <div class="col-md-8 mx-auto">
          <div class="card text-white bg-dark p-4">
            <img class="img-fluid mx-auto" src="image/login.png" alt="Card image" height="16" width="150">
            <div class="card-body p-0 my-3" style="margin-bottom:0px !important;">
              <h2 class="mb-4 m-0 text-center" contenteditable="true">Login to Your Account</h2>
              <form method="post" action="/session/create">
                <% if(flash && flash.err) { %>
                  <ul class="alert alert-success">
                  <% Object.keys(flash.err).forEach(function(error) { %>
                  <li><%- JSON.stringify(flash.err[error]) %></li>
                  <% }) %>
                  </ul>
                <% } %>
                <div class="form-group">
                  <input name="email" type="email" class="form-control" placeholder="Enter email"> </div>
                <div class="form-group">
                  <input name="password" type="password" class="form-control" placeholder="Password"> </div>
                <button type="submit" class="btn btn-secondary btn-block">Login</button>
              </form>
              <p class="text-light my-2"><a href="http://localhost:1337/register" class="text-white">Register</a> - <a href="http://localhost:1337/forgotpassword" class="text-white">Forgot Password</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="py-5 text-white bg-dark">
    <div class="container">
      <div class="row">
        <div class="col-md-12 mt-3 text-center">
          <p>Â© Copyright 2017 Pingendo - All rights reserved.</p>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" crossorigin="anonymous" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="/js/dependencies/sails.io.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/jquery-3.2.1.slim.min.js"></script>
  <script src="/js/jquery-3.3.1.min.js"></script>
  <script src="/js/popper.min.js"></script>
</body>

</html>